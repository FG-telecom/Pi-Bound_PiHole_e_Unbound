server:
    # Se nenhum arquivo de log for especificado, o syslog será usado
    # arquivo de log: "/var/log/unbound/unbound.log"
    verbosity: 0

    interface: 127.0.0.1
    port: 5335
    do-ip4: yes
    do-udp: yes
    do-tcp: yes

    # Pode ser definido como sim se você tiver conectividade IPv6
    do-ip6: yes 

    # Você quer deixar isso como "não", a menos que tenha IPv6 *nativo*. Com 6to4 e
    # Túneis Terredo seu navegador web deve favorecer o IPv4 pelos mesmos motivos
    prefer-ip6: yes 

    # Use isto somente quando tiver baixado a lista de servidores raiz primários!
    root-hints: "/var/lib/unbound/root.hints"

    # Confie na cola somente se estiver dentro da autoridade do servidor
    harden-glue: yes

    # Exigir dados DNSSEC para zonas ancoradas em confiança; se tais dados estiverem ausentes, a zona se tornará BOGUS
    harden-dnssec-stripped: yes

    # Não use randomização de capitalização, pois às vezes ela causa problemas de DNSSEC
    # veja https://discourse.pi-hole.net/t/unbound-stubby-or-dnscrypt-proxy/9378 para mais detalhes
    use-caps-for-id: no

    # Reduz o tamanho do buffer de remontagem do EDNS.
    # Sugerido pela página de manual unbound para reduzir problemas de remontagem de fragmentação
    edns-buffer-size: 1472

    # Executar pré-busca de entradas de cache de mensagens quase expiradas
    # Isso se aplica apenas a domínios que foram consultados com frequência
    prefetch: yes

    # Uma thread deve ser suficiente e pode ser aumentada em máquinas mais potentes. Na realidade, para a maioria dos usuários que trabalham em redes pequenas ou em uma única máquina, não deve ser necessário buscar melhorias de desempenho aumentando o número de threads para mais de 1.
    num-threads: 1

    # Garanta que o buffer do kernel seja grande o suficiente para não perder mensagens em picos de tráfego
    so-rcvbuf: 1m

    # Garantir a privacidade dos intervalos de IP locais
    private-address: 192.168.0.0/16
    private-address: 169.254.0.0/16
    private-address: 172.16.0.0/12
    private-address: 10.0.0.0/8
    private-address: fd00::/8
    private-address: fe80::/10
